<div class="main-search-container">
    <h1>Car Widget API</h1>
    <div class="inner-container">
        <form action="/cars/search" method="post">
                <div class="description_container">
                    <div class="inner-content">
                        <select name="make">
                            <option disabled selected hidden value="">Select Make</option>
                            {{#each selectMake}}
                            <option value="{{this}}">{{this}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="inner-content">
                        <select name="color">
                            <option disabled selected hidden value="">Select Color</option>
                            {{#each selectColors}}
                                <option value={{this}}>{{this}}</option>
                            {{/each}}
                        </select>
                    </div>                          
                <button type="submit">Search</button>
                </div>
        </form>
    </div>
    <div class="tables-container">
        <div>
            <table>
                <tr>
                    <th>Make</th>
                    <th>Model</th>
                    <th>Color</th>
                    <th>Price</th>
                    <th>Registration_Number</th>
                </tr>
                {{#each cars}}
                    <tr>
                        <td>{{make}}</td>
                        <td>{{model}}</td>
                        <td>{{color}}</td>
                        <td>{{price}}</td>
                        <td>{{reg_number}}</td> 
                    </tr>
                {{/each}}
            </table>
        </div>
        <div class="tables">
            <div>
                <table>
                <th>Make</th>
                <tr>
                    {{#selectMake}}
                        <tr>
                            <td>{{this}}</td>
                        </tr>
                    {{/selectMake}}
                </tr>
                </table>
            </div>
            <div>
                <table>
                <th>Colors</th>
                <tr>
                    {{#selectColors}}
                        <tr>
                            <td>{{this}}</td>
                        </tr>
                    {{/selectColors}}
                </tr>
                </table>
            </div>
        </div>
    </div>
</div>